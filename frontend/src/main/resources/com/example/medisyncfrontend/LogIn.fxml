<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medisyncfrontend.Controllers.LoginController"
      prefHeight="400.0" prefWidth="600.0">

   <children>
      <!-- Header -->
      <AnchorPane prefHeight="116.0" prefWidth="600.0" style="-fx-background-color: #64437C;">
         <children>
            <Label layoutX="201.0" layoutY="33.0" text="MediSync" textFill="#ffffff">
               <font>
                  <Font name="Cambria Bold" size="45.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Input Form -->
      <VBox prefHeight="286.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <Pane prefHeight="40.0" prefWidth="600.0" />

            <HBox spacing="10.0" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <Pane prefWidth="200.0" />
               <Label text="Username:">
                  <font><Font size="15.0" /></font>
               </Label>
               <TextField fx:id="tfUsername" prefHeight="26.0" prefWidth="180.0" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <Pane prefWidth="200.0" />
               <Label text="Password:">
                  <font><Font size="15.0" /></font>
               </Label>
               <PasswordField fx:id="pfPassword" prefHeight="26.0" prefWidth="180.0" />
            </HBox>
         </children>
      </VBox>

      <!-- Login Button -->
      <HBox prefHeight="198.0" prefWidth="600.0" alignment="CENTER_LEFT" style="-fx-background-color: #FFFFFF;">
         <children>
            <Pane prefWidth="312.0" />
            <Button fx:id="buttonLogin"
                    onAction="#handleLogin"
                    text="Log In"
                    prefHeight="26.0"
                    prefWidth="109.0"
                    style="-fx-background-color: #64437C;"
                    textFill="WHITE" />
         </children>
      </HBox>
   </children>
</VBox>
